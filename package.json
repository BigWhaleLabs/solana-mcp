{
  "name": "solana-mcp",
  "version": "1.0.0",
  "description": "A Model Context Protocol server for interacting with the Solana blockchain, powered by the Solana Agent Kit (https://github.com/sendaifun/solana-agent-kit)",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "solana-mcp": "./build/index.js"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir build --target bun",
    "build:http": "bun build src/http-server.ts --outdir build --target node --outfile http-server.js",
    "dev": "bun --watch src/index.ts",
    "start:http": "bun run src/http-server.ts",
    "dev:http": "bun --watch src/http-server.ts"
  },
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sendaifun/solana-mcp"
  },
  "keywords": [
    "solana",
    "mcp",
    "solana-agent-kit",
    "solana-mcp"
  ],
  "author": "sendaifun",
  "license": "MIT",
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@big-whale-labs/modelcontextprotocol-sdk": "^1.12.0",
    "@modelcontextprotocol/sdk": "^1.11.4",
    "@privy-io/server-auth": "^1.27.4",
    "@solana-agent-kit/adapter-mcp": "^2.0.6",
    "@solana-agent-kit/plugin-blinks": "^2.0.5",
    "@solana-agent-kit/plugin-defi": "^2.0.6",
    "@solana-agent-kit/plugin-misc": "^2.0.5",
    "@solana-agent-kit/plugin-nft": "^2.0.6",
    "@solana-agent-kit/plugin-token": "^2.0.7",
    "@solana/web3.js": "^1.98.2",
    "@types/morgan": "^1.9.10",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "morgan": "^1.10.0",
    "solana-agent-kit": "^2.0.8",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.4",
    "tsx": "^4.19.4",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.2.9"
  }
}
